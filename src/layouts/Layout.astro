---
import Favicons from "#components/Favicons.astro"
import Metadata from "#components/common/Metadata.astro"
import Header from "#components/widgets/header/Header.astro"
import { cn } from "#lib/utils.ts"
import "#styles/global.css"
import Analytics from "@vercel/analytics/astro"
import { ClientRouter } from "astro:transitions"

interface Props {
  title: string
  className?: string
}

const { title, className } = Astro.props
---

<html lang="fr">
  <head>
    <Metadata />
    <Favicons />
    <title>{title}</title>
    <ClientRouter />
    <Analytics />
  </head>
  <body class="bg-gray-50 text-gray-800">
    <div class="grid h-dvh grid-rows-[auto_1fr]">
      <Header />
      <main
        id="scrollArea"
        role="main"
        class={cn("snap-y snap-mandatory motion-reduce:scroll-smooth overflow-y-scroll mb-14 md:mb-0", className)}
      >
        <slot />
      </main>
    </div>
  </body>
</html>
