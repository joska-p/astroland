---
import Header from "#components/widgets/header/Header.astro"
import { cn } from "#lib/utils.ts"
import "#styles/global.css"
import { ClientRouter } from "astro:transitions"

interface Props {
  title: string
  className?: string
}

const { title, className } = Astro.props
---

<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Roland Potin Eizner artiste peintre" />
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" type="image/png" href="/favicon-16x16.png" sizes="16x16" />
    <link rel="shortcut icon" type="image/png" href="/favicon-32x32.png" sizes="32x32" />
    <link rel="apple-touch-icon" type="image/png" href="/apple-touch-icon.png" />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="bg-gray-50 text-gray-800">
    <div class="grid h-dvh grid-rows-[auto_1fr]">
      <Header />
      <main
        id="scrollArea"
        role="main"
        class={cn("snap-y snap-mandatory motion-reduce:scroll-smooth overflow-y-scroll mb-14 md:mb-0", className)}
      >
        <slot />
      </main>
    </div>
  </body>
</html>
