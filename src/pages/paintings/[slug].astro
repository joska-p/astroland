---
import Layout from "../../components/layouts/Layout.astro"
import { getCollection } from "astro:content"
import Single from "../../components/painting/Single.astro"

export async function getStaticPaths() {
  const paintings = await getCollection("paintings")
  return paintings.map((painting) => ({
    params: { slug: painting.data.slug },
    props: { painting: painting.data },
  }))
}

const { painting } = Astro.props
---

<Layout title=`${painting.title} - Roland Potin Eizner.`>
  <Single painting={painting} />
</Layout>
