---
import type { ImageMetadata } from "astro"
import { Picture } from "astro:assets"

interface Props {
  painting: {
    id: string
    title: string
    filename: ImageMetadata
    year: number
    width: number
    height: number
  }
}

const { painting } = Astro.props
const { id, title, year, width, height, filename } = painting
const capitalizedTitle = title.charAt(0).toUpperCase() + title.slice(1)
---

<article
  id={id}
  class="anchor grid h-full snap-start overflow-hidden has-[footer]:grid-rows-[1fr_auto] has-[h1]:grid-rows-[auto_1fr] landscape:grid-cols-2 landscape:items-center landscape:justify-items-center"
>
  <slot name="before-content" />
  <Picture
    src={filename}
    formats={["avif", "webp"]}
    alt={title}
    class="mx-auto object-contain"
    pictureAttributes={{
      class: "flex max-h-full max-w-full min-h-52 min-w-52",
    }}
  />
  <header class="mt-3 w-full lg:mt-6 2xl:mt-8">
    <h2 class="mb-3 text-center text-2xl text-gray-900 lg:mb-6 lg:text-3xl xl:text-4xl 2xl:mb-8 2xl:text-5xl">
      {capitalizedTitle}
    </h2>
    <p class="flex flex-row gap-2 text-base lg:text-lg xl:text-xl 2xl:text-2xl">
      <span class="basis-full text-right tracking-widest text-amber-800">Ann√©e:</span>
      <span class="basis-full text-left"><time datetime={String(year)}>{year === 0 ? "NC" : year}</time></span>
    </p>
    <p class="flex flex-row gap-2 text-base lg:text-lg xl:text-xl 2xl:text-2xl">
      <span class="basis-full text-right tracking-widest text-amber-800">Hauteur:</span>
      <span class="basis-full text-left">{height === 0 ? "NC" : height + " cm"}</span>
    </p>
    <p class="flex flex-row gap-2 text-base lg:text-lg xl:text-xl 2xl:text-2xl">
      <span class="basis-full text-right tracking-widest text-amber-800">Largeur:</span>
      <span class="basis-full text-left">{width === 0 ? "NC" : width + " cm"}</span>
    </p>
  </header>
  <slot name="after-content" />
</article>
