---
import type { ImageMetadata } from "astro"
import { Picture } from "astro:assets"

interface Props {
  painting: {
    id: string
    title: string
    filename: ImageMetadata
    year: number
    width: number
    height: number
  }
}

const { painting } = Astro.props
const { id, title, year, width, height, filename } = painting
---

<article
  id={id}
  class="content-center h-full md:grid md:justify-items-center md:grid-cols-2 md:items-center snap-start"
>
  <Picture src={filename} formats={["avif", "webp"]} alt={title} class="mx-auto" />
  <header class="mt-2 w-full md:mt-0 font-raleway">
    <h1
      class="text-xl font-bold text-center text-gray-900 sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl 2xl:text-6xl md:mb-8"
    >
      {title}
    </h1>
    <p class="flex flex-row gap-2 sm:text-lg md:text-xl lg:text-2xl xl:text-3xl 2xl:text-4xl">
      <span class="tracking-widest text-right text-amber-800 basis-full">Ann√©e:</span>
      <span class="text-left text-gray-900 basis-full"
        ><time datetime={String(year)}>{year === 0 ? "NC" : year}</time></span
      >
    </p>
    <p class="flex flex-row gap-2 sm:text-lg md:text-xl lg:text-2xl xl:text-3xl 2xl:text-4xl">
      <span class="tracking-widest text-right text-amber-800 basis-full">Hauteur:</span>
      <span class="text-left text-gray-900 basis-full">{height === 0 ? "NC" : height + " cm"}</span>
    </p>
    <p class="flex flex-row gap-2 sm:text-lg md:text-xl lg:text-2xl xl:text-3xl 2xl:text-4xl">
      <span class="tracking-widest text-right text-amber-800 basis-full">Largeur:</span>
      <span class="text-left text-gray-900 basis-full">{width === 0 ? "NC" : width + " cm"}</span>
    </p>
  </header>
  <slot />
</article>
