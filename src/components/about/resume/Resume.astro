---
import { getCollection, render } from "astro:content"

const resumeCollection = await getCollection("resume")
const resume = await Promise.all(
  resumeCollection
    .sort((a, b) => b.data.start - a.data.start)
    .map(async entry => {
      const { Content } = await render(entry)
      return { ...entry.data, Content }
    })
)
---

<section class="mx-auto mt-24 space-y-8">
  {
    resume.map(({ start, end, Content }) => (
      <article class="flex flex-col md:flex-row">
        <h6 class="shrink-0 self-start border-t border-solid border-gray-300 px-3 py-1 text-gray-500 md:sticky md:top-0">
          {end && <span class="block">{end}</span>}
          <span class="block">{start}</span>
        </h6>
        <div class="prose prose-ul:px-[10px] max-w-none grow marker:text-gray-300 md:border-b md:border-l md:border-solid md:border-gray-300">
          <Content />
        </div>
      </article>
    ))
  }
</section>
