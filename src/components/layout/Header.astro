    >
      {
        links.map((link) => (
          <li>
            <a
              href={link.href}
              aria-label={`Go to ${link.title} page`}
              class="block md:text-lg lg:text-xl xl:text-2xl 2xl:text-3xl"
            >
              {link.title}
            </a>
          </li>
        ))
      }
