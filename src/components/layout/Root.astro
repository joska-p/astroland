---
import { ViewTransitions } from "astro:transitions"
import Header from "./Header.astro"
import "../../styles/global.css"

interface Props {
  title: string
}

const { title } = Astro.props
---

<html
  lang="fr"
  class="motion-reduce:scroll-smooth snap-y snap-mandatory scroll-pt-20 md:scroll-pt-32 lg:scroll-pt-36 xl:scroll-pt-40 2xl:scroll-pt-44"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Roland Potin Eizner artiste peintre" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="shortcut icon"
      type="image/png"
      href="/sleepy-star/favicon-16x16.png"
      sizes="16x16"
    />
    <link
      rel="shortcut icon"
      type="image/png"
      href="/sleepy-star/favicon-32x32.png"
      sizes="32x32"
    />
    <link rel="apple-touch-icon" type="image/png" href="/sleepy-star/apple-touch-icon.png" />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="text-gray-800 bg-gray-50">
    <Header />
    <main id="main-content" class="container mx-auto space-y-24">
      <slot />
    </main>
  </body>
</html>
