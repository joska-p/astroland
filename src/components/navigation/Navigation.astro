---
interface Props {
  links: {
    title: string
    href: string
  }[]
}

const { links } = Astro.props
---

<nav>
  <ul class="flex flex-row gap-8 justify-center text-center md:gap-5 lg:gap-9 xl:gap-10 2xl:gap-11">
    {
      links.map((link) => (
        <li>
          <a href={link.href} class="block md:text-lg lg:text-xl xl:text-2xl 2xl:text-3xl">
            {link.title}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
