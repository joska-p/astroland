---
import Link from "../navigation/Link.astro"

type Link = {
  title: string
  href: string
}

interface Props {
  links: Link[]
}

const { links } = Astro.props
---

<nav>
  <ul
    class="flex flex-row flex-grow gap-4 justify-between text-center md:gap-5 lg:gap-6 xl:gap-8 2xl:gap-10"
  >
    {
      links.map((link) => (
        <li>
          <Link title={link.title} href={link.href} />
        </li>
      ))
    }
  </ul>
  <!-- <a href="#main-content" class="fixed right-0 bottom-0 p-5 text-xl">Retour en haut de page</a> -->
</nav>
