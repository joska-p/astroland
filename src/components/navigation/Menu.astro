---
const pathname = new URL(Astro.request.url).pathname
const currentPath = pathname
  .slice(1)
  .split("/")[1] /** remove the first /, split the path by / and get the second element */

const paths = [
  {
    title: "Accueil",
    href: "/astroland/",
  },
  {
    title: "Peinture",
    href: "/astroland/painting/1/",
  },
  {
    title: "Ã€ propos",
    href: "/astroland/about/",
  },
]
---

{
  paths.map((path) => {
    const isCurrent =
      currentPath ===
      path.href
        .slice(1)
        .split("/")[1] /** remove the first /, split the path by / and get the second element */
    return (
      <a
        href={path.href}
        aria-label={`Go to ${path.title}`}
        class={`${isCurrent ? "text-gray-900" : "text-gray-600"} hover:text-gray-900 sm:text-lg md:text-xl lg:text-2xl xl:text-3xl`}
      >
        {path.title}
      </a>
    )
  })
}
